<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@drawable/page1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:gravity = "center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The children were having so much"
            android:layout_marginStart="80dp"
            android:textStyle="bold"
            android:textSize = "15dp"
            android:textColor="#171616" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fun. There was so much snow!"
            android:layout_marginStart="80dp"
            android:textStyle="bold"
            android:textSize = "15dp"
            android:textColor="#0C0C0C" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="It was such fun to slide and make"
            android:textStyle="bold"
            android:layout_marginStart="80dp"
            android:textSize = "15dp"
            android:textColor="#222121" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="snowballs"
            android:textStyle="bold"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="115dp"
            android:textSize = "15dp"
            android:textColor="#191616" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity = "center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Who can make the biggest Snowman?"
            android:layout_marginEnd="60dp"
            android:textSize="15dp"
            android:textColor="#0B0A0A"
            android:textStyle="bold"
            android:fontFamily="serif"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One of them called out."
            android:layout_marginEnd="65dp"
            android:textSize="15dp"
            android:textColor="#0B0A0A"
            android:textStyle="bold"
            android:fontFamily="serif"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="They all got busy. Their big round"
            android:layout_marginEnd="65dp"
            android:textSize="15dp"
            android:textColor="#0B0A0A"
            android:textStyle="bold"
            android:fontFamily="serif"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snowman were amazing!"
            android:layout_marginEnd="65dp"
            android:textSize="15dp"
            android:textColor="#0B0A0A"
            android:textStyle="bold"
            android:fontFamily="serif"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Who can make the smallest Snowman?"
            android:layout_marginEnd="55dp"
            android:textSize="15dp"
            android:textColor="#0B0A0A"
            android:textStyle="bold"
            android:fontFamily="serif"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="They all laugh and got busy"
            android:layout_marginEnd="65dp"
            android:textSize="15dp"
            android:textColor="#0B0A0A"
            android:textStyle="bold"
            android:fontFamily="serif"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="with funny and cute tiny snowman..."
            android:layout_marginEnd="65dp"
            android:textSize="15dp"
            android:textColor="#0B0A0A"
            android:textStyle="bold"
            android:fontFamily="serif"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:gravity = "center"
        android:orientation="vertical">

        <Button
            android:id="@+id/back_button"
            android:layout_width="139dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#11A0ED"
            android:onClick="goToactivityMain"
            android:text="Back"
            android:textColor="#FFF"
            android:textSize="18dp" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="139dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/back_button"
            android:backgroundTint="#11A0ED"
            android:onClick="goTopage2"
            android:text="Next"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
    </RelativeLayout>


</LinearLayout>
