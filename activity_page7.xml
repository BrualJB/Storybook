<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@drawable/page7"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:gravity = "center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ollie put him back into the freezer"
            android:layout_marginStart="80dp"
            android:textStyle="bold"
            android:textSize = "15dp"
            android:textColor="#171616" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next to frozen peas"
            android:layout_marginStart="65dp"
            android:textStyle="bold"
            android:textSize = "15dp"
            android:textColor="#0C0C0C" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="''That's better...''"
            android:textStyle="bold"
            android:layout_marginStart="80dp"
            android:textSize = "15dp"
            android:textColor="#222121" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiny snowman shivered."
            android:textStyle="bold"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="115dp"
            android:layout_marginStart="80dp"
            android:textColor="#191616" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="''Much better. '' All that sunshine"
            android:textStyle="bold"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="115dp"
            android:layout_marginStart="80dp"
            android:textColor="#191616" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="''is too much for me. I prefer to shiver.''"
            android:textStyle="bold"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="115dp"
            android:layout_marginStart="75dp"
            android:textColor="#191616" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:gravity = "center"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ollie forgot about his tiny snowman."
            android:layout_marginEnd="30dp"
            android:textSize="15dp"
            android:textColor="#F57C00"
            android:textStyle="bold"
            android:fontFamily="serif"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slowly Mum put more packets in the freezer,"
            android:layout_marginEnd="30dp"
            android:textSize="15dp"
            android:textColor="#0B0A0A"
            android:textStyle="bold"
            android:fontFamily="serif"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="and Tiny snowman got hidden under"
            android:layout_marginEnd="30dp"
            android:textSize="15dp"
            android:textColor="#1C1201"
            android:textStyle="bold"
            android:fontFamily="serif"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a pile of fish finger"
            android:layout_marginEnd="30dp"
            android:textSize="15dp"
            android:textColor="#0B0A0A"
            android:textStyle="bold"
            android:fontFamily="serif"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="and chocolate ice cream ..."
            android:layout_marginEnd="30dp"
            android:textSize="15dp"
            android:textColor="#0B0A0A"
            android:textStyle="bold"
            android:fontFamily="serif"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Well, Almost forgotten"
            android:layout_marginEnd="30dp"
            android:textSize="15dp"
            android:textColor="#0B0A0A"
            android:textStyle="bold"
            android:fontFamily="serif"/>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:gravity = "center"
        android:orientation="vertical">

        <Button
            android:id="@+id/back_button"
            android:layout_width="139dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#11A0ED"
            android:onClick="goTopage6"
            android:text="Back"
            android:textColor="#FFF"
            android:textSize="18dp" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="139dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/back_button"
            android:backgroundTint="#11A0ED"
            android:onClick="goTopage8"
            android:text="Next"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
    </RelativeLayout>


</LinearLayout>
